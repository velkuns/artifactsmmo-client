{
  "name": "velkuns/artifactsmmo-client",
  "description": "PHP Client for Artifacts MMO Game Code",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Velkuns\\ArtifactsMMO\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Velkuns\\ArtifactsMMO\\Script\\": "./scripts",
      "Velkuns\\ArtifactsMMO\\Tests\\Unit\\": "./tests/unit",
      "Velkuns\\ArtifactsMMO\\Tests\\Integration\\": "./tests/integration"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*",
    "ext-json": "*",
    "eureka/component-serializer": "^2.0",
    "psr/http-message": "^1.0||^2.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^1.1||^2.0||^3.0"
  },

  "require-dev": {
    "cebe/php-openapi": "^1.7.0",
    "eureka/component-console": "^6.1.0",
    "friendsofphp/php-cs-fixer": "^3.62.0",
    "lcobucci/clock": "^3.0.0",
    "maglnet/composer-require-checker": "^4.7.1",
    "nikic/php-parser": "^4.19.1",
    "nyholm/psr7": "^1.8.1",
    "eureka/component-curl": "^2.2.0",
    "phpstan/phpstan": "^1.11.10",
    "phpstan/phpstan-phpunit": "^1.4.0",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.29",
    "shipmonk/composer-dependency-analyser": "^1.7.0"
  }
}
