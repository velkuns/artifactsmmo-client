{
  "name": "eureka/artifactmmo-client",
  "description": "PHP Client for Artifacts MMO Game Code",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Velkuns\\Component\\ArtifactsMMO\\": "./src",
      "Velkuns\\Component\\ArtifactsMMO\\Script\\": "./scripts"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Velkuns\\Component\\ArtifactsMMO\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-json": "*",
    "eureka/component-serializer": "^2.0",
    "psr/http-message": "^1.0||^2.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^1.1||^2.0||^3.0"
  },

  "require-dev": {
    "cebe/php-openapi": "^1.7.0",
    "eureka/component-console": "^6.1.0",
    "friendsofphp/php-cs-fixer": "^3.61.1",
    "maglnet/composer-require-checker": "^4.7.1",
    "nyholm/psr7": "^1.8.1",
    "phpstan/phpstan": "^1.11.9",
    "phpstan/phpstan-phpunit": "^1.4.0",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.29",
    "shipmonk/composer-dependency-analyser": "^1.6.1"
  }
}
