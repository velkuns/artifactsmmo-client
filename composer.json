{
  "name": "eureka/artifactmmo-client",
  "description": "PHP Client for Artifacts MMO Game Code",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Velkuns\\Component\\ArtifactsMMO\\Client\\": "./src",
      "Velkuns\\Component\\ArtifactsMMO\\Client\\Script\\": "./scripts"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Velkuns\\Component\\ArtifactsMMO\\Client\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.2.*",
    "eureka/component-serializer": "^2.0.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.61.1",
    "maglnet/composer-require-checker": "^4.7.1",
    "phpstan/phpstan": "^1.11.9",
    "phpstan/phpstan-phpunit": "^1.4.0",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.29",
    "shipmonk/composer-dependency-analyser": "^1.6.1"
  }
}
